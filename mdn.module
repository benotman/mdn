function min_heatmap($heatmapSQl){
	$SQLStr = "select min(cnt) as minCnt from (" . $heatmapSQl . ") as t1";
	$result = db_query($SQLStr);
	$min=0;
    foreach ($result as $record) {
	  $min = $record->minCnt;
	}
return $min;
}

function max_heatmap($heatmapSQl){
