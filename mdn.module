    $mode= 'regular';
	$counter=0;
	//$starting_time='';
	$user_id ='';

	foreach ($result as $record) {
	 
	 if($mode == 'regular'){
  	      if(strtolower($record->sub_section) == 'sql injection' && $record->ACTION == 'page_lookup'){ //$record->sub_section == 'b15' && $record->ACTION == 'hoverout'
		     $mode='harvest';
			 $user_id =$record->user_id;
			 //$starting_time = $record->action_time;
			 $counter=0;
	      }	
	  }
	  
      else if($mode == 'harvest'){
		  
		if($counter <= 15 && $record->user_id == $user_id){
	          
		         //if($record->sub_section != 'b15'){ //true
				     db_insert('templog') 
                          ->fields(array(
                              'user_id' => $record->user_id,
                              'minid' => $record->minId,
                              'page_section' => $record->page_section,
							  'sub_section' => $record->sub_section,
							  'action_time' => $record->action_time,
							  'action' => $record->ACTION,
                            ))->execute();
						
 			         $counter++;
				// }
		}
		else {
			  if($counter > 15){
				$mode= 'regular'; 
			  }
		}
		
	 }
	  
	
    }
}


